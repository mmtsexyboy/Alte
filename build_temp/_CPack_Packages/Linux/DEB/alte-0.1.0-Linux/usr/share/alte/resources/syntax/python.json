{
    "language_name": "Python",
    "file_extensions": [".py", ".pyw"],
    "highlighting_rules": [
        {
            "type": "keywords",
            "list": ["def", "class", "if", "else", "elif", "for", "while", "return", "import", "from", "True", "False", "None", "try", "except", "finally", "with", "as", "in", "is", "lambda", "nonlocal", "global", "pass", "yield", "assert", "del"],
            "format": { "color": "blue", "font_weight": "bold" }
        },
        {
            "type": "line_comment",
            "start_delimiter": "#",
            "format": { "color": "green", "font_style": "italic" }
        },
        {
            "type": "strings_double_quotes",
            "start_delimiter": "\"",
            "end_delimiter": "\"",
            "format": { "color": "red" }
        },
        {
            "type": "strings_single_quotes",
            "start_delimiter": "'",
            "end_delimiter": "'",
            "format": { "color": "red" }
        }
    ]
}
